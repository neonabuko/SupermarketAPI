@model List<Product>

@section title
{
    <h3>Products</h3>
}

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td><a class="btn btn-link" asp-controller="Categories" asp-action="Edit" asp-route-id="@product.Id">@product.Name</a></td>
                <td><a class="btn btn-link" asp-controller="Categories" asp-action="Delete" asp-route-id="@product.Id">@product.Price</a></td>
            </tr>
        }
        </tbody>
    </table>
    <br/>
}
<a class="btn btn-primary" asp-controller="Products" asp-action="Add">Add</a>